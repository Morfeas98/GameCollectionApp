@* Pages/Index.cshtml *@
@page
@model GameCollection.API.Pages.IndexModel

@{
    ViewData["Title"] = "Home - Game Collection Manager";
}

<div class="hero-section mb-5">
    <div class="container py-5">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">Organize Your Game Collection</h1>
                <p class="lead mb-4">
                    Track, manage, and discover new games for your collection.
                    Get personalized recommendations based on your preferences.
                </p>
                <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                    <a href="/Games" class="btn btn-primary btn-lg px-4 me-md-2">
                        <i class="bi bi-search me-2"></i>Browse Games
                    </a>
                    <a href="/Collections" class="btn btn-outline-primary btn-lg px-4">
                        <i class="bi bi-collection me-2"></i>My Collections
                    </a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="text-center">
                    <i class="bi bi-controller display-1 text-primary"></i>
                </div>
            </div>
        </div>
    </div>
</div>

@if (Model.RecentTopRatedGames.Any())
{
    <section class="mb-5">
        <div class="container">
            <h2 class="mb-4">
                Top Rated Games of @Model.CurrentYear
                <small class="text-muted fs-6">(Current Year)</small>
            </h2>
            @if (!Model.RecentTopRatedGames.Any())
            {
                <div class="alert alert-info">
                    No top-rated games released this year yet.
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var game in Model.RecentTopRatedGames)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card game-card h-100">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <h5 class="card-title mb-1">@game.Title</h5>
                                        <span class="badge current-year-badge">@game.MetacriticScore/100</span>
                                    </div>
                                    <p class="card-text">
                                        <small class="text-muted">
                                            Released: @game.ReleaseYear
                                            @if (!string.IsNullOrEmpty(game.Developer))
                                            {
                                                <text> | @game.Developer</text>
                                            }
                                            @if (!string.IsNullOrEmpty(game.Publisher))
                                            {
                                                <text> | @game.Publisher</text>
                                            }
                                        </small>
                                    </p>
                                    <!-- ... κώδικας για platforms ... -->
                                    <a href="/Games/Details/@game.Id" class="stretched-link"></a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </section>
}

@if (Model.AllTimeTopRatedGames.Any())
{
    <section class="mb-5">
        <div class="container">
            <h2 class="mb-4">All-Time Top Rated Games</h2>
            <div class="row">
                @foreach (var game in Model.AllTimeTopRatedGames)
                {
                    <div class="col-md-4 col-lg-2 mb-3">
                        <div class="card game-card h-100">
                            <div class="card-body">
                                <h6 class="card-title">@game.Title</h6>
                                <small class="text-muted">@game.ReleaseYear</small>
                                <div class="mt-2">
                                    @{
                                        var scoreClass = game.MetacriticScore >= 75 ? "metacritic-high" :
                                        game.MetacriticScore >= 50 ? "metacritic-medium" : "metacritic-low";
                                    }
                                    <span class="badge all-time-badge">@game.MetacriticScore</span>
                                </div>
                                <a href="/Games/Details/@game.Id" class="stretched-link"></a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}

<section class="mb-5">
    <div class="container">
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="bi bi-search display-4 text-primary mb-3"></i>
                        <h5>Discover Games</h5>
                        <p class="card-text">
                            Browse thousands of games with detailed information, ratings, and reviews.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="bi bi-collection display-4 text-primary mb-3"></i>
                        <h5>Create Collections</h5>
                        <p class="card-text">
                            Organize your games into custom collections and track your progress.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="bi bi-lightbulb display-4 text-primary mb-3"></i>
                        <h5>Get Recommendations</h5>
                        <p class="card-text">
                            Receive personalized game suggestions based on your collection and preferences.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>