@* Pages/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Game Collection Manager</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <style>
        .navbar-brand {
            font-weight: bold;
            color: #6c63ff !important;
        }

        .game-card {
            transition: transform 0.3s;
            height: 100%;
        }

            .game-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0,0,0,0.1);
            }

        .metacritic-badge {
            font-size: 0.9em;
            padding: 3px 8px;
            border-radius: 12px;
        }

        .metacritic-high {
            background-color: #66cc33;
            color: white;
        }

        .metacritic-medium {
            background-color: #ffcc33;
            color: black;
        }

        .metacritic-low {
            background-color: #ff3333;
            color: white;
        }
        
        .current-year-badge {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        .all-time-badge {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            color: white;
        }

        .empty-list-message {
            border-left: 4px solid #6c757d;
            padding-left: 1rem;
        }
    </style>

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container">
                <a class="navbar-brand" href="/">
                    <i class="bi bi-controller me-2"></i>Game Collection
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/Games">Games</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Collections">My Collections</a>
                        </li>
                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container py-4">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted">
        <div class="container py-3">
            <div class="row">
                <div class="col-md-6">
                    &copy; 2026 - Game Collection Manager
                </div>
                <div class="col-md-6 text-md-end">
                    <a href="/swagger" class="text-muted me-3">API Documentation</a>
                    <a href="https://github.com/Morfeas98/GameCollectionApp" class="text-muted">GitHub</a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>