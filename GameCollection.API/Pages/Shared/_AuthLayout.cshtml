@* Pages/Shared/_AuthLayout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Game Collection</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
        }

        .auth-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.1);
        }

        .auth-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 15px 15px 0 0;
        }

        .brand-link {
            text-decoration: none;
            color: inherit;
            transition: opacity 0.2s;
        }

            .brand-link:hover {
                opacity: 0.9;
            }

        .footer-links a {
            color: rgba(255,255,255,0.7);
            text-decoration: none;
            transition: color 0.2s;
        }

            .footer-links a:hover {
                color: white;
            }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-dark border-0 py-3">
        <div class="container">
            <a class="navbar-brand brand-link d-flex align-items-center" href="/">
                <i class="bi bi-controller me-2 fs-3"></i>
                <div>
                    <div class="fw-bold">Game Collection</div>
                    <small class="opacity-75">Manage your gaming library</small>
                </div>
            </a>

            <div class="navbar-nav">
                <a href="/" class="nav-link">
                    <i class="bi bi-house me-1"></i> Home
                </a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="text-white text-center py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h6>Game Collection</h6>
                    <p class="small opacity-75">Organize, track, and discover your perfect game library</p>
                </div>
                <div class="col-md-4 mb-3">
                    <h6>Quick Links</h6>
                    <div class="footer-links small">
                        <a href="/" class="d-block mb-1">Home</a>
                        <a href="/Games" class="d-block mb-1">Browse Games</a>
                        <a href="/Collections" class="d-block mb-1">Collections</a>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <h6>Legal</h6>
                    <div class="footer-links small">
                        <a href="#" class="d-block mb-1">Privacy Policy</a>
                        <a href="#" class="d-block mb-1">Terms of Service</a>
                    </div>
                </div>
            </div>
            <hr class="opacity-25 my-3" />
            <div class="small opacity-75">
                &copy; @DateTime.Now.Year - Game Collection Manager
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>