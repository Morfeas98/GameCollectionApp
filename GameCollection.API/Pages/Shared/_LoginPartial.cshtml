@* Pages/Shared/_LoginPartial.cshtml *@
@using System.Security.Claims

@if (User.Identity?.IsAuthenticated == true)
{
    <ul class="navbar-nav">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                <i class="bi bi-person-circle me-1"></i>@User.Identity.Name
            </a>
            <ul class="dropdown-menu dropdown-menu-end">
                <li><a class="dropdown-item" href="/Collections"><i class="bi bi-collection me-2"></i>My Collections</a></li>
                <li><a class="dropdown-item" href="/Account/Profile"><i class="bi bi-person me-2"></i>Profile</a></li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <form method="post" asp-page="/Account/Logout" asp-antiforgery="true">
                        <button type="submit" class="dropdown-item"><i class="bi bi-box-arrow-right me-2"></i>Logout</button>
                    </form>
                </li>
            </ul>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" href="/Account/Login">Login</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-primary ms-2" href="/Account/Register">Sign Up</a>
        </li>
    </ul>
}