@* Pages/Account/Profile.cshtml *@
@page
@model GameCollection.API.Pages.Account.ProfileModel

@{
    ViewData["Title"] = "Profile";
}

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-person-circle display-1 text-primary"></i>
                    </div>
                    <h5 class="card-title">@Model.Profile.Username</h5>
                    <p class="card-text text-muted">@Model.Profile.Email</p>
                    <p class="card-text">
                        <small class="text-muted">
                            Member since @Model.Profile.CreatedAt.ToString("MMMM yyyy")
                        </small>
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">My Collections</h5>
                </div>
                <div class="card-body">
                    @if (Model.Collections.Any())
                    {
                        <div class="list-group">
                            @foreach (var collection in Model.Collections)
                            {
                                <a href="/Collections/Details/@collection.Id" class="list-group-item list-group-item-action">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@collection.Name</h6>
                                        <small>@collection.GameCount games</small>
                                    </div>
                                    @if (!string.IsNullOrEmpty(collection.Description))
                                    {
                                        <p class="mb-1 text-muted">@collection.Description</p>
                                    }
                                    <small class="text-muted">Created @collection.CreatedAt.ToString("MMMM dd, yyyy")</small>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-collection display-4 text-muted mb-3"></i>
                            <h5>No Collections Yet</h5>
                            <p class="text-muted">Start by creating your first collection!</p>
                            <a href="/Collections/Create" class="btn btn-primary">Create Collection</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>