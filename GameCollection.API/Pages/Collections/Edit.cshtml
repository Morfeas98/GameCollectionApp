@* Pages/Collections/Edit.cshtml *@
@page "{id:int}"
@model GameCollection.API.Pages.Collections.EditModel

@{
    ViewData["Title"] = "Edit Collection: " + Model.CurrentCollection?.Name;
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Collections">Collections</a></li>
                    <li class="breadcrumb-item"><a href="/Collections/Details/@Model.CurrentCollection?.Id">@Model.CurrentCollection?.Name</a></li>
                    <li class="breadcrumb-item active">Edit</li>
                </ol>
            </nav>

            <!-- Edit Form -->
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="bi bi-pencil-square me-2"></i>
                        Edit Collection: @Model.CurrentCollection?.Name
                    </h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Collection Name -->
                        <div class="mb-4">
                            <label asp-for="UpdateCollectionDto.Name" class="form-label fw-bold"></label>
                            <input asp-for="UpdateCollectionDto.Name" class="form-control" />
                            <span asp-validation-for="UpdateCollectionDto.Name" class="text-danger small"></span>
                        </div>

                        <!-- Description -->
                        <div class="mb-4">
                            <label asp-for="UpdateCollectionDto.Description" class="form-label fw-bold"></label>
                            <textarea asp-for="UpdateCollectionDto.Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="UpdateCollectionDto.Description" class="text-danger small"></span>
                        </div>

                        <!-- Statistics -->
                        <div class="alert alert-info">
                            <div class="row">
                                <div class="col-md-6">
                                    <small class="text-muted">Created</small>
                                    <div class="fw-bold">@Model.CurrentCollection?.CreatedAt.ToString("dd MMM yyyy")</div>
                                </div>
                                <div class="col-md-6">
                                    <small class="text-muted">Games in Collection</small>
                                    <div class="fw-bold">@Model.CurrentCollection?.GameCount</div>
                                </div>
                            </div>
                        </div>

                        <!-- Form Buttons -->
                        <div class="d-flex justify-content-between">
                            <div>
                                <a href="/Collections/Details/@Model.CurrentCollection?.Id" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left"></i> Cancel
                                </a>
                            </div>
                            <div>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-circle"></i> Save Changes
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}