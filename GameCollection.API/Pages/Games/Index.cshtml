@* Pages/Games/Index.cshtml *@
@page "{handler?}"
@model GameCollection.API.Pages.Games.IndexModel

@{
    ViewData["Title"] = "Browse Games";
}

<div class="container">
    <!-- Search Bar -->
    <div class="row mb-4">
        <div class="col-12">
            <form method="get" class="card">
                <div class="card-body">
                    <div class="input-group">
                        <input type="text" 
                               class="form-control form-control-lg" 
                               name="search" 
                               value="@Model.SearchQuery"
                               placeholder="Search games by title, developer, description...">
                        <button class="btn btn-primary" type="submit">
                            <i class="bi bi-search"></i> Search
                        </button>
                        <a href="/Games" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle"></i> Clear
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Filters -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">Filters</h6>
                </div>
                <div class="card-body">
                    <form method="get">
                        <!-- Platform Filter -->
                        <div class="mb-3">
                            <label class="form-label">Platform</label>
                            <select class="form-select" name="platformId" asp-for="PlatformId">
                                <option value="">All Platforms</option>
                                <!-- TODO: Populate with actual platforms -->
                                <option value="1">PC</option>
                                <option value="2">PlayStation 5</option>
                                <option value="3">Xbox Series X</option>
                            </select>
                        </div>
                        
                        <!-- Genre Filter -->
                        <div class="mb-3">
                            <label class="form-label">Genre</label>
                            <select class="form-select" name="genreId" asp-for="GenreId">
                                <option value="">All Genres</option>
                                <!-- TODO: Populate with actual genres -->
                                <option value="1">Action</option>
                                <option value="2">Adventure</option>
                                <option value="3">RPG</option>
                            </select>
                        </div>
                        
                        <!-- Year Range -->
                        <div class="mb-3">
                            <label class="form-label">Release Year</label>
                            <div class="row g-2">
                                <div class="col-6">
                                    <input type="number" 
                                           class="form-control" 
                                           name="minYear" 
                                           placeholder="From"
                                           min="1950"
                                           max="@DateTime.Now.Year"
                                           asp-for="MinYear">
                                </div>
                                <div class="col-6">
                                    <input type="number" 
                                           class="form-control" 
                                           name="maxYear" 
                                           placeholder="To"
                                           min="1950"
                                           max="@DateTime.Now.Year + 2"
                                           asp-for="MaxYear">
                                </div>
                            </div>
                        </div>
                        
                        <!-- Sort -->
                        <div class="mb-3">
                            <label class="form-label">Sort By</label>
                            <select class="form-select" name="sort" asp-for="SortBy">
                                <option value="title">Title (A-Z)</option>
                                <option value="title_desc">Title (Z-A)</option>
                                <option value="year">Year (Oldest First)</option>
                                <option value="year_desc">Year (Newest First)</option>
                                <option value="rating">Metacritic (Highest First)</option>
                                <option value="rating_desc">Metacritic (Lowest First)</option>
                            </select>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-funnel"></i> Apply Filters
                            </button>
                            <a href="/Games" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-clockwise"></i> Reset
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Games Grid -->
        <div class="col-md-9">
            <!-- Results Info -->
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h4 class="mb-0">Games</h4>
                    <small class="text-muted">
                        Showing @((Model.PageNumber - 1) * Model.PageSize + 1)-@Math.Min(Model.PageNumber * Model.PageSize, Model.TotalCount) 
                        of @Model.TotalCount games
                    </small>
                </div>
                <div>
                    <a href="/Games/Create" class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> Add Game
                    </a>
                </div>
            </div>

            @if (Model.Games.Any())
            {
                <div class="row">
                    @foreach (var game in Model.Games)
                    {
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card game-card h-100">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h5 class="card-title mb-0">@game.Title</h5>
                                        @if (game.MetacriticScore.HasValue)
                                        {
                                            var scoreClass = game.MetacriticScore >= 75 ? "metacritic-high" :
                                                                 game.MetacriticScore >= 50 ? "metacritic-medium" :
                                                                 "metacritic-low";
                                            
                                            <span class="metacritic-badge @scoreClass">
                                                @game.MetacriticScore
                                            </span>
                                        }
                                    </div>
                                    
                                    <p class="card-text">
                                        <small class="text-muted">
                                            @game.ReleaseYear | 
                                            @if (!string.IsNullOrEmpty(game.Developer))
                                            {
                                                @game.Developer
                                            }
                                        </small>
                                    </p>
                                    
                                    @if (!string.IsNullOrEmpty(game.Description) && game.Description.Length > 100)
                                    {
                                        <p class="card-text small">
                                            @game.Description.Substring(0, 100)...
                                        </p>
                                    }
                                    else if (!string.IsNullOrEmpty(game.Description))
                                    {
                                        <p class="card-text small">@game.Description</p>
                                    }
                                    
                                    @if (game.Platforms.Any())
                                    {
                                        <div class="mt-2">
                                            @foreach (var platform in game.Platforms.Take(3))
                                            {
                                                <span class="badge bg-light text-dark me-1 mb-1">@platform</span>
                                            }
                                            @if (game.Platforms.Count > 3)
                                            {
                                                <span class="badge bg-light text-dark">+@(game.Platforms.Count - 3)</span>
                                            }
                                        </div>
                                    }
                                    
                                    @if (game.Genres.Any())
                                    {
                                        <div class="mt-2">
                                            @foreach (var genre in game.Genres.Take(2))
                                            {
                                                <span class="badge bg-secondary me-1 mb-1">@genre</span>
                                            }
                                        </div>
                                    }
                                </div>
                                <div class="card-footer bg-transparent">
                                    <div class="d-flex justify-content-between">
                                        <a href="/Games/Details/@game.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-info-circle"></i> Details
                                        </a>
                                        <a href="/Games/Edit/@game.Id" class="btn btn-sm btn-outline-secondary">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Pagination -->
                @if (Model.TotalCount > Model.PageSize)
                {
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            @if (Model.PageNumber > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="/Games?page=@(Model.PageNumber - 1)&search=@Model.SearchQuery">
                                        Previous
                                    </a>
                                </li>
                            }
                            
                            @for (int i = 1; i <= Math.Ceiling((double)Model.TotalCount / Model.PageSize); i++)
                            {
                                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                    <a class="page-link" href="/Games?page=@i&search=@Model.SearchQuery">
                                        @i
                                    </a>
                                </li>
                            }
                            
                            @if (Model.PageNumber < Math.Ceiling((double)Model.TotalCount / Model.PageSize))
                            {
                                <li class="page-item">
                                    <a class="page-link" href="/Games?page=@(Model.PageNumber + 1)&search=@Model.SearchQuery">
                                        Next
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-emoji-frown display-1 text-muted mb-3"></i>
                    <h4>No games found</h4>
                    <p class="text-muted">
                        @if (!string.IsNullOrEmpty(Model.SearchQuery))
                        {
                            <span>No games match your search criteria.</span>
                        }
                        else
                        {
                            <span>No games available. Be the first to add one!</span>
                        }
                    </p>
                    <a href="/Games/Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Add First Game
                    </a>
                </div>
            }
        </div>
    </div>
</div>