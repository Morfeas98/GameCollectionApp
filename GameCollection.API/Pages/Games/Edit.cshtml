@* Pages/Games/Edit.cshtml *@
@page "{id:int}"
@model GameCollection.API.Pages.Games.EditModel

@{
    ViewData["Title"] = "Edit Game: " + Model.GameForm.Title;
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Games">Games</a></li>
                    <li class="breadcrumb-item"><a href="/Games/Details/@Model.GameForm.Id">@Model.GameForm.Title</a></li>
                    <li class="breadcrumb-item active">Edit</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="bi bi-pencil-square me-2"></i>
                        Edit Game: @Model.GameForm.Title
                    </h4>
                </div>
                <div class="card-body">
                    <form method="post" id="editGameForm">
                        <input type="hidden" asp-for="GameForm.Id" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Βασικές Πληροφορίες -->
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="mb-0">Basic Information</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-8 mb-3">
                                        <label asp-for="GameForm.Title" class="form-label"></label>
                                        <input asp-for="GameForm.Title" class="form-control" />
                                        <span asp-validation-for="GameForm.Title" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-4 mb-3">
                                        <label asp-for="GameForm.ReleaseYear" class="form-label"></label>
                                        <input asp-for="GameForm.ReleaseYear" class="form-control" />
                                        <span asp-validation-for="GameForm.ReleaseYear" class="text-danger small"></span>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="GameForm.Description" class="form-label"></label>
                                    <textarea asp-for="GameForm.Description" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="GameForm.Description" class="text-danger small"></span>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="GameForm.Developer" class="form-label"></label>
                                        <input asp-for="GameForm.Developer" class="form-control" />
                                        <span asp-validation-for="GameForm.Developer" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6 mb-3">
                                        <label asp-for="GameForm.Publisher" class="form-label"></label>
                                        <input asp-for="GameForm.Publisher" class="form-control" />
                                        <span asp-validation-for="GameForm.Publisher" class="text-danger small"></span>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="GameForm.ImageUrl" class="form-label"></label>
                                        <input asp-for="GameForm.ImageUrl" class="form-control" placeholder="https://example.com/image.jpg" />
                                        <span asp-validation-for="GameForm.ImageUrl" class="text-danger small"></span>
                                        @if (!string.IsNullOrEmpty(Model.GameForm.ImageUrl))
                                        {
                                            <div class="mt-2">
                                                <small class="text-muted">Current Image:</small>
                                                <br>
                                                <img src="@Model.GameForm.ImageUrl" alt="Game image" style="max-width: 200px; max-height: 100px;" class="mt-1 border rounded" />
                                            </div>
                                        }
                                    </div>

                                    <div class="col-md-6 mb-3">
                                        <label asp-for="GameForm.FranchiseId" class="form-label"></label>
                                        <select asp-for="GameForm.FranchiseId"
                                                asp-items="Model.GameForm.Franchises"
                                                class="form-select">
                                        </select>
                                        <span asp-validation-for="GameForm.FranchiseId" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Ratings & Links -->
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="mb-0">Ratings & Links</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="GameForm.MetacriticScore" class="form-label"></label>
                                        <input asp-for="GameForm.MetacriticScore" class="form-control" type="number" min="0" max="100" />
                                        <span asp-validation-for="GameForm.MetacriticScore" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6 mb-3">
                                        <label asp-for="GameForm.MetacriticUrl" class="form-label"></label>
                                        <input asp-for="GameForm.MetacriticUrl" class="form-control" placeholder="https://www.metacritic.com/game/..." />
                                        <span asp-validation-for="GameForm.MetacriticUrl" class="text-danger small"></span>
                                        @if (!string.IsNullOrEmpty(Model.GameForm.MetacriticUrl))
                                        {
                                            <small class="text-muted">
                                                <a href="@Model.GameForm.MetacriticUrl" target="_blank">View current Metacritic page</a>
                                            </small>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Platforms -->
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="mb-0">Platforms</h5>
                                <small class="text-muted">Select all platforms where this game is available</small>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    @for (int i = 0; i < Model.GameForm.Platforms.Count; i++)
                                    {
                                        var platform = Model.GameForm.Platforms[i];
                                        var isSelected = Model.GameForm.SelectedPlatformIds.Contains(int.Parse(platform.Value));

                                        <div class="col-md-4 col-sm-6 mb-2">
                                            <div class="form-check">
                                                <input type="checkbox"
                                                       class="form-check-input"
                                                       id="platform-@platform.Value"
                                                       name="GameForm.SelectedPlatformIds"
                                                       value="@platform.Value"
                                                       @(isSelected ? "checked" : "") />
                                                <label class="form-check-label" for="platform-@platform.Value">
                                                    @platform.Text
                                                </label>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Genres -->
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="mb-0">Genres</h5>
                                <small class="text-muted">Select all genres that describe this game</small>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    @for (int i = 0; i < Model.GameForm.Genres.Count; i++)
                                    {
                                        var genre = Model.GameForm.Genres[i];
                                        var isSelected = Model.GameForm.SelectedGenreIds.Contains(int.Parse(genre.Value));

                                        <div class="col-md-4 col-sm-6 mb-2">
                                            <div class="form-check">
                                                <input type="checkbox"
                                                       class="form-check-input"
                                                       id="genre-@genre.Value"
                                                       name="GameForm.SelectedGenreIds"
                                                       value="@genre.Value"
                                                       @(isSelected ? "checked" : "") />
                                                <label class="form-check-label" for="genre-@genre.Value">
                                                    @genre.Text
                                                </label>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Form Buttons -->
                        <div class="d-flex justify-content-between">
                            <div>
                                <a href="/Games/Details/@Model.GameForm.Id" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left"></i> Back to Game
                                </a>
                                <button type="button" class="btn btn-outline-danger ms-2" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                    <i class="bi bi-trash"></i> Delete Game
                                </button>
                            </div>
                            <div>
                                <a href="/Games" class="btn btn-outline-secondary me-2">
                                    Cancel
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-circle"></i> Save Changes
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Game</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete <strong>@Model.GameForm.Title</strong>?</p>
                <p class="text-danger">This action cannot be undone. All user collections that include this game will be affected.</p>
            </div>
            <div class="modal-footer">
                <form method="post" asp-page-handler="Delete">
                    <input type="hidden" name="id" value="@Model.GameForm.Id" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete Game</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('editGameForm');

            // Real-time validation για URL fields
            const urlFields = document.querySelectorAll('input[type="url"]');
            urlFields.forEach(field => {
                field.addEventListener('blur', function() {
                    if (this.value && !isValidUrl(this.value)) {
                        this.classList.add('is-invalid');
                    } else {
                        this.classList.remove('is-invalid');
                    }
                });
            });

            function isValidUrl(string) {
                try {
                    new URL(string);
                    return true;
                } catch (_) {
                    return false;
                }
            }

            // Προειδοποίηση αν αλλάξει το release year σε πολύ παλιό
            const yearInput = document.getElementById('GameForm_ReleaseYear');
            if (yearInput) {
                yearInput.addEventListener('change', function() {
                    const year = parseInt(this.value);
                    if (year < 1970) {
                        if (!confirm('Release year before 1970. Is this correct?')) {
                            this.focus();
                        }
                    } else if (year > new Date().getFullYear() + 2) {
                        if (!confirm('Release year is in the future. Is this correct?')) {
                            this.focus();
                        }
                    }
                });
            }
        });
    </script>
}