<script>
    // ==============================================
    // GLOBAL VARIABLES AND STATE
    // ==============================================
    let currentCollectionId = null;
    let currentCollectionName = null;
    let currentCollectionData = null;

    // ==============================================
    // MAIN FUNCTION: LOAD COLLECTION NOTES
    // ==============================================
    async function loadCollectionNotes(collectionId, collectionName) {
        // Validate parameters
        if (!collectionId || !collectionName) {
            console.error('Missing collectionId or collectionName');
            return;
        }

        // Update current selection
        currentCollectionId = collectionId;
        currentCollectionName = collectionName;

        // Update UI: Highlight selected badge
        updateBadgeSelection(collectionId);

        // Show loading state
        showLoadingState();

        try {
            // Make API call to get collection details
            const response = await fetch(`/api/collectiongames/details/@Model.Game.Id/${collectionId}`, {
                method: 'GET',
                headers: {
                    'Accept': 'application/json',
                    'Content-Type': 'application/json'
                }
            });

            if (!response.ok) {
                throw new Error(`HTTP error! status: ${response.status}`);
            }

            const data = await response.json();
            currentCollectionData = data;

            // Update the UI with the received data
            updateNotesDisplay(data);

        } catch (error) {
            console.error('Error loading collection notes:', error);
            showErrorState('Failed to load notes. Please try again.');
        } finally {
            // Hide loading indicator
            hideLoadingState();
        }
    }

    // ==============================================
    // UI UPDATE FUNCTIONS
    // ==============================================
    function updateBadgeSelection(selectedCollectionId) {
        // Remove active class from all badges
        document.querySelectorAll('.collection-badge').forEach(badge => {
            badge.classList.remove('btn-primary');
            badge.classList.add('btn-outline-primary');
        });

        // Add active class to selected badge
        const selectedBadge = document.getElementById(`badge-${selectedCollectionId}`);
        if (selectedBadge) {
            selectedBadge.classList.remove('btn-outline-primary');
            selectedBadge.classList.add('btn-primary');
        }
    }

    function showLoadingState() {
        document.getElementById('loading-indicator').style.display = 'block';
        document.getElementById('notes-display').style.display = 'none';
        document.getElementById('no-selection').style.display = 'none';
    }

    function hideLoadingState() {
        document.getElementById('loading-indicator').style.display = 'none';
    }

    function showErrorState(message) {
        // Hide other displays
        document.getElementById('notes-display').style.display = 'none';
        document.getElementById('no-selection').style.display = 'none';

        // Show error in notes display area
        const notesDisplay = document.getElementById('notes-display');
        notesDisplay.innerHTML = `
            <div class="card-body">
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-triangle"></i> ${message}
                </div>
                <button class="btn btn-sm btn-outline-secondary" onclick="tryReloadNotes()">
                    <i class="bi bi-arrow-clockwise"></i> Try Again
                </button>
            </div>
        `;
        notesDisplay.style.display = 'block';
    }

    function tryReloadNotes() {
        if (currentCollectionId && currentCollectionName) {
            loadCollectionNotes(currentCollectionId, currentCollectionName);
        }
    }

    function updateNotesDisplay(data) {
        // Update collection name and info
        document.getElementById('current-collection-name').textContent =
            `Notes for: ${currentCollectionName}`;

        if (data.dateAdded) {
            const date = new Date(data.dateAdded);
            document.getElementById('collection-info').textContent =
                `Added on: ${date.toLocaleDateString()}`;
        }

        // Update rating display
        updateRatingDisplay(data.personalRating);

        // Update notes display
        updateNotesContent(data.personalNotes);

        // Update status badges
        updateStatusBadges(data.completed, data.currentlyPlaying);

        // Show the notes display
        document.getElementById('notes-display').style.display = 'block';
        document.getElementById('no-selection').style.display = 'none';

        // Ensure remove button is visible
        const removeButton = document.getElementById('remove-button');
        if (removeButton) {
            removeButton.style.display = 'inline-block';
        }
    }

    function updateRatingDisplay(rating) {
        const ratingValue = document.getElementById('rating-value');
        const ratingStars = document.getElementById('rating-stars');
        const ratingDisplay = document.getElementById('rating-display');

        if (rating) {
            ratingValue.textContent = `(${rating}/10)`;

            // Generate stars (5 stars total, each represents 2 points)
            let starsHtml = '';
            for (let i = 1; i <= 5; i++) {
                const starClass = i <= Math.ceil(rating / 2) ? 'bi-star-fill' : 'bi-star';
                starsHtml += `<i class="bi ${starClass}"></i>`;
            }
            ratingStars.innerHTML = starsHtml;

            ratingDisplay.style.display = 'block';
        } else {
            ratingDisplay.style.display = 'none';
        }
    }

    function updateNotesContent(notes) {
        const notesText = document.getElementById('notes-text');
        const notesContent = document.getElementById('notes-content');

        if (notes) {
            notesText.textContent = notes;
            notesContent.style.display = 'block';
        } else {
            notesText.textContent = 'No notes added yet.';
            notesContent.style.display = 'block';
        }
    }

    function updateStatusBadges(completed, currentlyPlaying) {
        const statusBadges = document.getElementById('status-badges');
        let badgesHtml = '';

        if (completed) {
            badgesHtml += `
                <span class="badge bg-success me-2">
                    <i class="bi bi-check-circle"></i> Completed
                </span>
            `;
        }

        if (currentlyPlaying) {
            badgesHtml += `
                <span class="badge bg-info">
                    <i class="bi bi-controller"></i> Currently Playing
                </span>
            `;
        }

        statusBadges.innerHTML = badgesHtml;
        statusBadges.style.display = badgesHtml ? 'block' : 'none';
    }

    // ==============================================
    // EDIT NOTES MODAL FUNCTIONS
    // ==============================================
    function showEditModal() {
        if (!currentCollectionData) {
            alert('Please select a collection first');
            return;
        }

        const modal = new bootstrap.Modal(document.getElementById('editNotesModal'));

        // Populate modal form with current data
        document.getElementById('modal-collection-id').value = currentCollectionId;
        document.getElementById('modal-personal-rating').value = currentCollectionData.personalRating || 5;
        document.getElementById('modal-personal-notes').value = currentCollectionData.personalNotes || '';
        document.getElementById('modal-completed').checked = currentCollectionData.completed || false;
        document.getElementById('modal-currently-playing').checked = currentCollectionData.currentlyPlaying || false;

        // Update modal title
        document.querySelector('#editNotesModal .modal-title').textContent =
            `Edit Notes for ${currentCollectionName}`;

        // Show modal
        modal.show();
    }

    // ==============================================
    // REMOVE FROM COLLECTION FUNCTIONS (WITH MODAL)
    // ==============================================
        function showRemoveConfirmation() {
        if (!currentCollectionId || !currentCollectionName) {
            alert('Please select a collection first');
            return;
        }

        // Set modal content
        const modalCollectionName = document.getElementById('modal-collection-name');
        const modalRemoveCollectionId = document.getElementById('modal-remove-collection-id');

        if (modalCollectionName) {
            modalCollectionName.textContent = currentCollectionName;
        }

        if (modalRemoveCollectionId) {
            modalRemoveCollectionId.value = currentCollectionId;
        }

        // Show modal
        const removeModal = new bootstrap.Modal(document.getElementById('removeConfirmModal'));
        removeModal.show();
    }

    function setupRemoveModal() {
        const removeButton = document.getElementById('remove-button');
        const removeConfirmForm = document.getElementById('remove-confirm-form');

        if (removeButton) {
            // Update remove button to show modal instead of direct action
            removeButton.onclick = showRemoveConfirmation;
        }

        if (removeConfirmForm) {
            // Store success message before form submission
            removeConfirmForm.addEventListener('submit', function(e) {
                if (currentCollectionName) {
                    sessionStorage.setItem('removeSuccess', 'true');
                    sessionStorage.setItem('removedCollectionName', currentCollectionName);
                }

                // Visual feedback: fade out the badge
                const badge = document.getElementById(`badge-${currentCollectionId}`);
                if (badge) {
                    badge.classList.add('removing');
                }
            });
        }
    }

    // ==============================================
    // SUCCESS MESSAGE HANDLING (after redirect)
    // ==============================================
    function checkForSuccessMessage() {
        // Check sessionStorage for remove success message
        if (sessionStorage.getItem('removeSuccess')) {
            const collectionName = sessionStorage.getItem('removedCollectionName');
            showSuccessMessage(`Game removed from "${collectionName}"`);

            // Clear storage
            sessionStorage.removeItem('removeSuccess');
            sessionStorage.removeItem('removedCollectionName');
        }
    }

    function showSuccessMessage(message) {
        // Create success alert element
        const alertDiv = document.createElement('div');
        alertDiv.className = 'alert alert-success alert-dismissible fade show mt-3 remove-success';
        alertDiv.innerHTML = `
            <i class="bi bi-check-circle me-2"></i> ${message}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        `;

        // Insert at the top of the page
        const container = document.querySelector('.container');
        if (container) {
            container.insertBefore(alertDiv, container.firstChild);
        }

        // Auto-dismiss after 3 seconds
        setTimeout(() => {
            const bsAlert = new bootstrap.Alert(alertDiv);
            bsAlert.close();
        }, 3000);
    }

    // ==============================================
    // INITIALIZATION
    // ==============================================
    document.addEventListener('DOMContentLoaded', function() {
        // Check for success messages from previous actions
        checkForSuccessMessage();

        setupRemoveModal();

        // Load the first collection by default
        const firstBadge = document.querySelector('.collection-badge');
        if (firstBadge) {
            const collectionId = firstBadge.getAttribute('data-collection-id');
            const collectionName = firstBadge.getAttribute('data-collection-name');
            loadCollectionNotes(collectionId, collectionName);
        }

        // Initialize Bootstrap popovers (if any)
        const popoverTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="popover"]'));
        const popoverList = popoverTriggerList.map(function(popoverTriggerEl) {
            return new bootstrap.Popover(popoverTriggerEl);
        });

        // Add click handlers for collection badges
        document.querySelectorAll('.collection-badge').forEach(badge => {
            badge.addEventListener('click', function() {
                const collectionId = this.getAttribute('data-collection-id');
                const collectionName = this.getAttribute('data-collection-name');
                loadCollectionNotes(collectionId, collectionName);
            });
        });
    });

    // ==============================================
    // EVENT LISTENERS FOR FORM SUBMISSIONS
    // ==============================================
    // Store collection name before remove form submission
    document.getElementById('remove-form')?.addEventListener('submit', function(e) {
        if (currentCollectionName) {
            sessionStorage.setItem('removeSuccess', 'true');
            sessionStorage.setItem('removedCollectionName', currentCollectionName);
        }
    });
</script>