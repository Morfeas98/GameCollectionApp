﻿@* Pages/Games/Details.cshtml *@
@page "{id:int}"
@model GameCollection.API.Pages.Games.DetailsModel

@{
    ViewData["Title"] = Model.Game?.Title ?? "Game Details";
}
@section Styles {
    <style>
        /* ==============================================
           CUSTOM STYLES FOR COLLECTION INTERACTIONS
           ============================================== */
        .collection-badge {
            transition: all 0.2s ease;
            position: relative;
            overflow: hidden;
            cursor: pointer;
        }

            .collection-badge:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            }

            .collection-badge.active {
                background-color: #0d6efd !important;
                color: white !important;
                border-color: #0d6efd !important;
            }

        .removing {
            animation: fadeOut 0.3s ease forwards;
        }

        @@keyframes fadeOut {
            from

        {
            opacity: 1;
            transform: scale(1);
        }

        to {
            opacity: 0;
            transform: scale(0.8);
        }

        }

        #loading-indicator {
            text-align: center;
            padding: 20px;
        }

        #notes-display {
            transition: opacity 0.3s ease;
            animation: fadeIn 0.3s ease;
        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .remove-success {
            background-color: #d1e7dd;
            border-color: #badbcc;
            color: #0f5132;
            animation: slideIn 0.3s ease;
        }

        @@keyframes slideIn {
            from

        {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        /* Rating stars styling */
        .text-warning .bi-star-fill {
            color: #ffc107;
        }

        .text-warning .bi-star {
            color: #dee2e6;
        }
        /* Remove Confirmation Modal Styling */
        #removeConfirmModal .modal-content {
            border: 3px solid #fd7e14;
            border-radius: 10px;
        }

        #removeConfirmModal .modal-header {
            background: linear-gradient(135deg, #ffc107 0%, #fd7e14 100%);
            border-bottom: 2px solid #dc3545;
        }

        #removeConfirmModal .modal-title {
            font-weight: bold;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
        }

        #removeConfirmModal .alert-warning {
            border-left: 4px solid #dc3545;
            background-color: #fff3cd;
        }

        #removeConfirmModal .btn-danger {
            background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
            border: none;
            font-weight: bold;
            transition: all 0.2s ease;
        }

            #removeConfirmModal .btn-danger:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(220, 53, 69, 0.3);
            }

        #removeConfirmModal .btn-secondary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(108, 117, 125, 0.3);
        }
    </style>
}

@if (Model.Game != null)
{
    <div class="container">

        <!-- Breadcrumb Navigation -->
        <div class="row mb-4">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-page="/Games/Index">Games</a></li>
                        <li class="breadcrumb-item active">@Model.Game.Title</li>
                    </ol>
                </nav>
            </div>
        </div>

        <div class="row">
            <!-- Left Column: Game Image & Quick Actions -->
            <div class="col-lg-4 col-md-5">
                <!-- Game Image Card -->
                <div class="card mb-4">
                    @if (!string.IsNullOrEmpty(Model.Game.ImageUrl))
                    {
                        <div class="d-flex align-items-center justify-content-center" style="height: 400px;">
                            <img src="@Model.Game.ImageUrl"
                                 class="img-fluid"
                                 alt="@Model.Game.Title"
                                 style="max-height: 100%; max-width: 100%; object-fit: contain;">
                        </div>
                    }
                    else
                    {
                        <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center"
                             style="height: 400px;">
                            <i class="bi bi-controller display-1 text-light"></i>
                        </div>
                    }

                    <!-- Game Stats inside Image Card -->
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-6">Release Year</dt>
                            <dd class="col-6">@Model.Game.ReleaseYear</dd>

                            @if (!string.IsNullOrEmpty(Model.Game.Developer))
                            {
                                <dt class="col-6">Developer</dt>
                                <dd class="col-6">@Model.Game.Developer</dd>
                            }

                            @if (!string.IsNullOrEmpty(Model.Game.Publisher))
                            {
                                <dt class="col-6">Publisher</dt>
                                <dd class="col-6">@Model.Game.Publisher</dd>
                            }

                            @if (Model.Game.MetacriticScore.HasValue)
                            {
                                <dt class="col-6">Metacritic</dt>
                                <dd class="col-6">
                                    @{
                                        var metacriticClass = Model.Game.MetacriticScore >= 75 ? "text-success" :
                                        Model.Game.MetacriticScore >= 50 ? "text-warning" : "text-danger";
                                    }
                                    <span class="fw-bold @metacriticClass">
                                        @Model.Game.MetacriticScore
                                    </span>
                                </dd>
                            }
                        </dl>
                    </div>
                </div>
                
                <!-- Quick Add to Collection Card -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h6 class   ="mb-0">Add to Collection</h6>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-page-handler="QuickAdd">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="gameId" value="@Model.Game.Id" />

                            <div class="mb-3">
                                <label class="form-label">Select Collection</label>
                                <select class="form-select" name="collectionId" required>
                                    <option value="">Choose a collection...</option>
                                    @if (Model.UserCollections != null && Model.UserCollections.Any())
                                    {
                                        @foreach (var collection in Model.UserCollections)
                                        {
                                                // Έλεγχος αν το game είναι ήδη σε αυτή τη συλλογή
                                                var isAlreadyInCollection = Model.CollectionsContainingGame != null && 
                                                                            Model.CollectionsContainingGame.Any(c => c.Id == collection.Id);
   
                                            @if (!isAlreadyInCollection)
                                            {
                                                <option value="@collection.Id">@collection.Name</option>
                                            }
                                            else
                                            {
                                                <option value="@collection.Id" disabled style="color: #6c757d;">
                                                    @collection.Name (Already added)
                                                </option>
                                            }
                                        }
                                    }
                                    else
                                    {
                                        <option value="" disabled>No collections found</option>
                                    }
                                </select>
                                @if (!(Model.UserCollections != null && Model.UserCollections.Any()))
                                {
                                    <div class="mt-2">
                                        <a href="/Collections/Create" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-plus-circle"></i> Create First Collection
                                        </a>
                                    </div>
                                }
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Your Rating (1-10)</label>
                                <input type="range"
                                       class="form-range"
                                       name="personalRating"
                                       min="1"
                                       max="10"
                                       value="5">
                                <div class="d-flex justify-content-between small text-muted">
                                    <span>1</span>
                                    <span>5</span>
                                    <span>10</span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Notes</label>
                                <textarea class="form-control"
                                      name="personalNotes"
                                      rows="3"
                                      placeholder="Add your thoughts about this game..."></textarea>
                            </div>

                            <div class="mb-3">
                                <div class="form-check">
                                    <input class="form-check-input"
                                           type="checkbox"
                                           name="completed"
                                           id="completedCheck"
                                           value="true">
                                    <label class="form-check-label" for="completedCheck">
                                        <i class="bi bi-check-circle"></i> Completed
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input"
                                           type="checkbox"
                                           name="currentlyPlaying"
                                           id="playingCheck"
                                           value="true">
                                    <label class="form-check-label" for="playingCheck">
                                        <i class="bi bi-controller"></i> Currently Playing
                                    </label>
                                </div>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary"
                                        @if (!(Model.UserCollections != null && Model.UserCollections.Any(c =>
                                                                            Model.CollectionsContainingGame == null ||
                                                                            !Model.CollectionsContainingGame.Any(cc => cc.Id == c.Id))))
                                        {
                                            <text>disabled</text>
                                        }
    >
                                        <i class="bi bi-plus-circle"></i> Add to Collection
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Quick Actions Card -->
                <div class="card">
                    <div class="card-header">
                        <h6 class="mb-0">Quick Actions</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a asp-page="/Games/Edit" asp-route-id="@Model.Game.Id" class="btn btn-outline-primary">
                                <i class="bi bi-pencil-square"></i> Edit Game Details
                            </a>

                            @if (!string.IsNullOrEmpty(Model.Game.MetacriticUrl))
                            {
                                <a href="@Model.Game.MetacriticUrl" target="_blank" class="btn btn-outline-secondary">
                                    <i class="bi bi-box-arrow-up-right"></i> View on Metacritic
                                </a>
                            }

                            <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                <i class="bi bi-trash"></i> Delete Game
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column: Game Details -->
            <div class="col-lg-8 col-md-7">
                <!-- Game Header -->
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div>
                                <h1 class="card-title mb-1">@Model.Game.Title</h1>
                                <p class="text-muted mb-0">
                                    @Model.Game.ReleaseYear
                                    @if (!string.IsNullOrEmpty(Model.Game.Developer))
                                    {
                                        <span> | @Model.Game.Developer</span>
                                    }
                                    @if (!string.IsNullOrEmpty(Model.Game.Publisher))
                                    {
                                        <span> | @Model.Game.Publisher</span>
                                    }
                                </p>
                            </div>

                            @if (Model.Game.MetacriticScore.HasValue)
                            {
                                var scoreClass = Model.Game.MetacriticScore >= 75 ? "metacritic-high" :
                                Model.Game.MetacriticScore >= 50 ? "metacritic-medium" : "metacritic-low";

                                <div class="text-center">
                                    <div class="metacritic-badge @scoreClass" style="font-size: 1.2em; padding: 8px 15px;">
                                        @Model.Game.MetacriticScore
                                    </div>
                                    <small class="text-muted">Metacritic</small>
                                </div>
                            }
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex gap-2 mb-4">
                            @if (Model.IsInUserCollection)
                            {
                                <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#removeAllModal">
                                    <i class="bi bi-trash"></i> Remove from All Collections
                                </button>
                            }
                            else
                            {
                                <div class="alert alert-info d-flex align-items-center mt-3 border-0 shadow-sm" role="alert">
                                    <i class="bi bi-info-circle-fill me-3 fs-3"></i>
                                    <div>
                                        <div class="fw-bold">Game not in any Collection</div>
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Description -->
                        @if (!string.IsNullOrEmpty(Model.Game.Description))
                        {
                            <div class="mb-4">
                                <h5>Description</h5>
                                <p class="text-justify">@Model.Game.Description</p>
                            </div>
                        }

                        <!-- Game Details -->
                        <div class="row mb-4">
                            @if (Model.Game.Platforms != null && Model.Game.Platforms.Any())
                            {
                                <div class="col-md-6 mb-3">
                                    <h6><i class="bi bi-laptop"></i> Platforms</h6>
                                    <div>
                                        @foreach (var platform in Model.Game.Platforms)
                                        {
                                            <span class="badge bg-primary me-1 mb-1">@platform</span>
                                        }
                                    </div>
                                </div>
                            }

                            @if (Model.Game.Genres != null && Model.Game.Genres.Any())
                            {
                                <div class="col-md-6 mb-3">
                                    <h6><i class="bi bi-tags"></i> Genres</h6>
                                    <div>
                                        @foreach (var genre in Model.Game.Genres)
                                        {
                                            <span class="badge bg-secondary me-1 mb-1">@genre</span>
                                        }
                                    </div>
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(Model.Game.FranchiseName))
                            {
                                <div class="col-12 mt-2">
                                    <h6><i class="bi bi-collection"></i> Franchise</h6>
                                    <span class="badge bg-info">@Model.Game.FranchiseName</span>
                                </div>
                            }
                        </div>

                        <!-- User Notes (if in collection) -->
                        @if (Model.IsInUserCollection)
                        {
                            <div class="border-top pt-3 mt-3">
                                <h5><i class="bi bi-journal-text"></i> Your Collections & Notes</h5>

                                <!-- Collection Selection -->
                                <div class="mb-3">
                                    <strong>Select Collection to View Notes:</strong>
                                    <div class="mt-2 d-flex flex-wrap gap-2" id="collection-badges-container">
                                        @foreach (var collection in Model.CollectionsContainingGame)
                                        {
                                            <button type="button"
                                                    class="btn btn-outline-primary collection-badge"
                                                    data-collection-id="@collection.Id"
                                                    data-collection-name="@collection.Name"
                                                    id="badge-@collection.Id">
                                                <i class="bi bi-collection"></i> @collection.Name
                                            </button>
                                        }
                                    </div>
                                </div>

                                <!-- Loading Indicator -->
                                <div id="loading-indicator" class="text-center py-3" style="display: none;">
                                    <div class="spinner-border spinner-border-sm" role="status">
                                        <span class="visually-hidden">Loading...</span>
                                    </div>
                                    <span class="ms-2">Loading notes...</span>
                                </div>

                                <!-- No Selection Message -->
                                <div id="no-selection" class="text-center py-4 text-muted">
                                    <i class="bi bi-info-circle display-6"></i>
                                    <p class="mt-2">Select a collection above to view notes and rating</p>
                                </div>

                                <!-- Notes Display Area (Αρχικά κρυφό) -->
                                <div id="notes-display" class="card bg-light mt-3" style="display: none;">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-3">
                                            <div>
                                                <h6 id="current-collection-name" class="mb-0"></h6>
                                                <small class="text-muted" id="collection-info"></small>
                                            </div>
                                            <div class="btn-group" role="group">
                                                <!-- Edit Button -->
                                                <button type="button" class="btn btn-sm btn-outline-primary"
                                                        onclick="showEditModal()">
                                                    <i class="bi bi-pencil"></i> Edit
                                                </button>

                                                <!-- Remove Button -->
                                                <button type="button" class="btn btn-sm btn-outline-danger"
                                                        onclick="removeFromCurrentCollection()"
                                                        id="remove-button">
                                                    <i class="bi bi-trash"></i> Remove
                                                </button>
                                            </div>
                                        </div>

                                        <!-- Rating Section -->
                                        <div id="rating-display" class="mb-2" style="display: none;">
                                            <strong>Rating:</strong>
                                            <div class="text-warning d-inline-block ms-2" id="rating-stars">
                                                <!-- Stars will be populated by JavaScript -->
                                            </div>
                                            <span id="rating-value" class="ms-2"></span>
                                        </div>

                                        <!-- Notes Content -->
                                        <div id="notes-content" class="mb-2" style="display: none;">
                                            <strong>Notes:</strong>
                                            <p id="notes-text" class="mb-0 mt-1"></p>
                                        </div>

                                        <!-- Status Badges -->
                                        <div id="status-badges" class="mt-2">
                                            <!-- Status badges will be populated by JavaScript -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        <!-- Hidden Remove Form -->
                        <form method="post" asp-page-handler="RemoveFromCollection" id="remove-form" style="display: none;">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="gameId" id="remove-game-id" value="@Model.Game.Id" />
                            <input type="hidden" name="collectionId" id="remove-collection-id" />
                        </form>
                    </div>
                </div>

                <!-- Recommendations -->
                @if (Model.Recommendations != null && Model.Recommendations.Any())
                {
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="bi bi-lightbulb"></i> Recommended Games</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                @foreach (var recommendation in Model.Recommendations.Take(3))
                                {
                                    <div class="col-md-4 mb-3">
                                        <div class="card h-100 hover-shadow">
                                            <div class="card-body">
                                                <h6 class="card-title">@recommendation.Title</h6>
                                                <p class="card-text small text-muted mb-2">
                                                    @recommendation.ReleaseYear
                                                    @if (recommendation.MetacriticScore.HasValue)
                                                    {
                                                        <span class="badge bg-secondary float-end">@recommendation.MetacriticScore</span>
                                                    }
                                                </p>
                                                <a asp-page="/Games/Details" asp-route-id="@recommendation.Id" class="stretched-link"></a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                            @if (Model.Recommendations.Count() > 3)
                            {
                                <div class="text-center mt-3">
                                    <a href="#" class="btn btn-sm btn-outline-primary">
                                        View All Recommendations
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Delete Game</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete <strong>@Model.Game.Title</strong>?</p>
                    <p class="text-danger">This action cannot be undone.</p>
                </div>
                <div class="modal-footer">
                    <form method="post" asp-page-handler="Delete">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Game.Id" />
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">Delete Game</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Remove all Confirmation Modal -->
    <div class="modal fade" id="removeAllModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Removal</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body text-center py-4">
                    <i class="bi bi-exclamation-triangle text-danger fs-1 mb-3"></i>
                    <p class="mb-1">Are you sure you want to delete <strong>@Model.Game.Title</strong> from All your Collections?</p>
                    <small class="text-muted">This will remove all associated notes and ratings.</small>
                </div>
                <div class="modal-footer justify-content-center">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form method="post" asp-page-handler="RemoveFromCollection">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="gameId" value="@Model.Game.Id" />
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Yes, Remove Everything
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Remove Confirmation Modal -->
    <div class="modal fade" id="removeConfirmModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-warning text-dark">
                    <h5 class="modal-title">
                        <i class="bi bi-exclamation-triangle me-2"></i> Remove from Collection
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-warning mb-3">
                        <i class="bi bi-exclamation-circle me-2"></i>
                        <strong>Warning:</strong> This action cannot be undone.
                    </div>

                    <p class="mb-3">
                        Are you sure you want to remove
                        <strong><span id="modal-game-title">@Model.Game.Title</span></strong>
                        from
                        <strong><span id="modal-collection-name"></span></strong>?
                    </p>

                    <div class="card bg-light mb-3">
                        <div class="card-body">
                            <p class="mb-1"><strong>This will remove:</strong></p>
                            <ul class="mb-0">
                                <li>Your personal rating</li>
                                <li>Your notes and comments</li>
                                <li>Completion status</li>
                                <li>Currently playing status</li>
                            </ul>
                        </div>
                    </div>

                    <p class="text-muted small">
                        <i class="bi bi-info-circle me-1"></i>
                        The game will remain in your other collections (if any).
                    </p>
                </div>
                <div class="modal-footer">
                    <form method="post" asp-page-handler="RemoveFromCollection" id="remove-confirm-form">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="gameId" id="modal-remove-game-id" value="@Model.Game.Id" />
                        <input type="hidden" name="collectionId" id="modal-remove-collection-id" />
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            <i class="bi bi-x-circle me-1"></i> Cancel
                        </button>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-1"></i> Remove from Collection
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Notes Modal -->
    @if (Model.IsInUserCollection && Model.CollectionsContainingGame != null && Model.CollectionsContainingGame.Any())
    {
        <div class="modal fade" id="editNotesModal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Edit Notes</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <form method="post" asp-page-handler="UpdateNotes">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="gameId" value="@Model.Game.Id" />
                        <input type="hidden" name="collectionId" id="modal-collection-id" />

                        <div class="modal-body">
                            <div class="mb-3">
                                <label class="form-label">Rating (1-10)</label>
                                <input type="range"
                                       class="form-range"
                                       name="personalRating"
                                       id="modal-personal-rating"
                                       min="1"
                                       max="10"
                                       value="5">
                                <div class="d-flex justify-content-between">
                                    <small>1</small>
                                    <small>5</small>
                                    <small>10</small>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Notes</label>
                                <textarea class="form-control"
                                  name="personalNotes"
                                  id="modal-personal-notes"
                                  rows="4" placeholder="Add your thoughts..."></textarea>
                            </div>

                            <div class="mb-3">
